    <script>
        let gameData = {
            gameName: '',
            players: [],
            playerColors: [],
            timePerPlayer: 60,
            scoringType: 'rounds',
            numRounds: 5,
            items: [],
            orderedPlayers: [],
            orderedColors: []
        };

        let timerData = {
            currentPlayerIndex: 0,
            timeRemaining: 60,
            interval: null,
            isPaused: false
        };

        const defaultPlayerColors = [
            '#e74c3c', // Rojo
            '#3498db', // Azul
            '#2ecc71', // Verde
            '#f39c12', // Naranja
            '#9b59b6', // P√∫rpura
            '#1abc9c', // Turquesa
            '#e67e22', // Naranja oscuro
            '#34495e', // Azul gris
            '#d35400', // Calabaza
            '#16a085'  // Verde azulado
        ];

        function formatTime(seconds) {
            const mins = Math.floor(seconds / 60);
            const secs = seconds % 60;
            return `${mins}:${secs.toString().padStart(2, '0')}`;
        }

        // Funciones de navegaci√≥n
        function showScreen(screenId) {
            document.querySelectorAll('.screen').forEach(screen => {
                screen.classList.remove('active');
            });
            document.getElementById(screenId).classList.add('active');
        }

        // Pantalla 1: Setup
        function addPlayerInput() {
            const container = document.getElementById('playersContainer');
            const playerNum = container.children.length + 1;
            const defaultColor = defaultPlayerColors[playerNum % defaultPlayerColors.length];
            
            const div = document.createElement('div');
            div.className = 'player-input-row';
            div.innerHTML = `
                <input type="text" placeholder="Nombre del jugador ${playerNum}" class="player-name">
                <input type="color" value="${defaultColor}" class="player-color" title="Color del jugador">
                <button onclick="removePlayerInput(this)" class="remove-player-btn">‚úï</button>
            `;
            container.appendChild(div);
            
            updateRemoveButtons();
        }

        function removePlayerInput(button) {
            button.closest('.player-input-row').remove();
            updateRemoveButtons();
        }

        function updateRemoveButtons() {
            const rows = document.querySelectorAll('.player-input-row');
            rows.forEach((row, index) => {
                const btn = row.querySelector('.remove-player-btn');
                if (rows.length > 2) {
                    btn.style.display = 'block';
                } else {
                    btn.style.display = 'none';
                }
            });
        }

        function startGame() {
            const gameName = document.getElementById('gameName').value.trim();
            const playerRows = document.querySelectorAll('.player-input-row');
            
            const players = [];
            const colors = [];
            
            playerRows.forEach(row => {
                const name = row.querySelector('.player-name').value.trim();
                const color = row.querySelector('.player-color').value;
                if (name !== '') {
                    players.push(name);
                    colors.push(color);
                }
            });

            // Validaci√≥n
            let hasError = false;
            
            if (!gameName) {
                document.getElementById('gameNameError').textContent = 'Por favor, ingresa el nombre del juego';
                hasError = true;
            } else {
                document.getElementById('gameNameError').textContent = '';
            }

            if (players.length < 2) {
                document.getElementById('playersError').textContent = 'Necesitas al menos 2 jugadores';
                hasError = true;
            } else {
                document.getElementById('playersError').textContent = '';
            }

            if (hasError) return;

            // Guardar datos
            gameData.gameName = gameName;
            gameData.players = players;
            gameData.playerColors = colors;

            // Mostrar informaci√≥n
            document.getElementById('gameDisplay').textContent = gameName;
            document.getElementById('playersDisplay').textContent = players.join(', ');

            showScreen('timerChoiceScreen');
        }

        // Pantalla 2: Timer Choice
        function startTimer() {
            gameData.timePerPlayer = parseInt(document.getElementById('timePerPlayer').value);
            gameData.orderedPlayers = [...gameData.players];
            gameData.orderedColors = [...gameData.playerColors];
            
            document.getElementById('gameDisplayOrder').textContent = gameData.gameName;
            
            // Crear lista ordenable de jugadores
            const container = document.getElementById('orderContainer');
            container.innerHTML = '';
            
            gameData.orderedPlayers.forEach((player, index) => {
                const div = document.createElement('div');
                div.className = 'order-item';
                div.draggable = true;
                div.dataset.index = index;
                div.style.borderColor = gameData.orderedColors[index];
                div.innerHTML = `
                    <span class="drag-handle">‚ò∞</span>
                    <div class="order-number" style="background-color: ${gameData.orderedColors[index]};">${index + 1}</div>
                    <div class="order-player-name">${player}</div>
                `;
                container.appendChild(div);
            });
            
            setupDragAndDrop();
            showScreen('orderPlayersScreen');
        }

        function setupDragAndDrop() {
            const container = document.getElementById('orderContainer');
            const items = container.querySelectorAll('.order-item');
            
            items.forEach(item => {
                item.addEventListener('dragstart', handleDragStart);
                item.addEventListener('dragover', handleDragOver);
                item.addEventListener('drop', handleDrop);
                item.addEventListener('dragend', handleDragEnd);
            });
        }

        let draggedElement = null;

        function handleDragStart(e) {
            draggedElement = this;
            this.classList.add('dragging');
            e.dataTransfer.effectAllowed = 'move';
        }

        function handleDragOver(e) {
            e.preventDefault();
            e.dataTransfer.dropEffect = 'move';
            
            const afterElement = getDragAfterElement(e.clientY);
            const container = document.getElementById('orderContainer');
            
            if (afterElement == null) {
                container.appendChild(draggedElement);
            } else {
                container.insertBefore(draggedElement, afterElement);
            }
            
            return false;
        }

        function handleDrop(e) {
            e.stopPropagation();
            return false;
        }

        function handleDragEnd(e) {
            this.classList.remove('dragging');
            
            // Actualizar n√∫meros de orden y mantener colores
            const items = document.querySelectorAll('.order-item');
            items.forEach((item, index) => {
                const numberElement = item.querySelector('.order-number');
                numberElement.textContent = index + 1;
            });
        }

        function getDragAfterElement(y) {
            const draggableElements = [...document.querySelectorAll('.order-item:not(.dragging)')];
            
            return draggableElements.reduce((closest, child) => {
                const box = child.getBoundingClientRect();
                const offset = y - box.top - box.height / 2;
                
                if (offset < 0 && offset > closest.offset) {
                    return { offset: offset, element: child };
                } else {
                    return closest;
                }
            }, { offset: Number.NEGATIVE_INFINITY }).element;
        }

        function confirmOrder() {
            // Guardar el orden final de jugadores y colores
            const items = document.querySelectorAll('.order-item');
            gameData.orderedPlayers = [];
            gameData.orderedColors = [];
            
            items.forEach(item => {
                const playerName = item.querySelector('.order-player-name').textContent;
                const playerColor = item.querySelector('.order-number').style.backgroundColor;
                gameData.orderedPlayers.push(playerName);
                gameData.orderedColors.push(playerColor);
            });
            
            // Inicializar temporizador
            timerData.currentPlayerIndex = 0;
            timerData.timeRemaining = gameData.timePerPlayer;
            timerData.isPaused = false;
            
            startFullscreenTimer();
        }

        function startFullscreenTimer() {
            showScreen('timerScreen');
            
            document.getElementById('gameNameTimer').textContent = gameData.gameName;
            updateTimerDisplay();
            startCountdown();
        }

        function updateTimerDisplay() {
            const currentPlayer = gameData.orderedPlayers[timerData.currentPlayerIndex];
            const color = gameData.orderedColors[timerData.currentPlayerIndex];
            
            document.getElementById('timerFullscreen').style.backgroundColor = color;
            document.getElementById('currentPlayerName').textContent = currentPlayer;
            document.getElementById('timeDisplayLarge').textContent = formatTime(timerData.timeRemaining);
        }

        function startCountdown() {
            if (timerData.interval) {
                clearInterval(timerData.interval);
            }
            
            timerData.interval = setInterval(() => {
                if (!timerData.isPaused) {
                    timerData.timeRemaining--;
                    document.getElementById('timeDisplayLarge').textContent = formatTime(timerData.timeRemaining);
                    
                    if (timerData.timeRemaining <= 0) {
                        // Tiempo agotado
                        clearInterval(timerData.interval);
                        alert(`¬°Tiempo agotado para ${gameData.orderedPlayers[timerData.currentPlayerIndex]}!`);
                        nextPlayerTurn();
                    }
                }
            }, 1000);
        }

        function nextPlayerTurn() {
            timerData.currentPlayerIndex = (timerData.currentPlayerIndex + 1) % gameData.orderedPlayers.length;
            timerData.timeRemaining = gameData.timePerPlayer;
            timerData.isPaused = false;
            
            document.getElementById('pauseBtn').innerHTML = '<span style="font-size: 24px;">‚è∏Ô∏è</span><br>Pausar';
            
            updateTimerDisplay();
        }

        function togglePause() {
            timerData.isPaused = !timerData.isPaused;
            const pauseBtn = document.getElementById('pauseBtn');
            
            if (timerData.isPaused) {
                pauseBtn.innerHTML = '<span style="font-size: 24px;">‚ñ∂Ô∏è</span><br>Reanudar';
            } else {
                pauseBtn.innerHTML = '<span style="font-size: 24px;">‚è∏Ô∏è</span><br>Pausar';
            }
        }

        function endTimerSession() {
            console.log('endTimerSession called');
            
            // Detener el temporizador
            if (timerData.interval) {
                clearInterval(timerData.interval);
                timerData.interval = null;
            }
            
            // Ir a la configuraci√≥n de puntuaci√≥n
            document.getElementById('gameDisplayScoring').textContent = gameData.gameName;
            showScreen('scoringSetupScreen');
        }

        function returnToTimer() {
            // Volver al temporizador y reanudarlo
            showScreen('timerScreen');
            
            // Reiniciar el temporizador si no est√° corriendo
            if (!timerData.interval) {
                startCountdown();
            }
        }

        function skipToScoring() {
            showScreen('scoringSetupScreen');
            document.getElementById('gameDisplayScoring').textContent = gameData.gameName;
        }

        function goToScoring() {
            // Detener el temporizador si est√° activo
            if (timerData.interval) {
                clearInterval(timerData.interval);
                timerData.interval = null;
            }
            
            showScreen('scoringSetupScreen');
            document.getElementById('gameDisplayScoring').textContent = gameData.gameName;
        }

        // Pantalla 4: Scoring Setup
        document.getElementById('roundsRadio').addEventListener('change', function() {
            document.getElementById('roundsConfig').style.display = 'block';
            document.getElementById('itemsConfig').style.display = 'none';
        });

        document.getElementById('itemsRadio').addEventListener('change', function() {
            document.getElementById('roundsConfig').style.display = 'none';
            document.getElementById('itemsConfig').style.display = 'block';
        });

        function addItemInput() {
            const container = document.getElementById('itemsContainer');
            const div = document.createElement('div');
            div.className = 'scoring-item';
            div.innerHTML = `
                <div class="scoring-item-header">
                    <input type="text" placeholder="Nombre del √≠tem" class="item-name" style="width: 60%;">
                    <div class="checkbox-label">
                        <input type="checkbox" class="item-negative">
                        <label>Resta</label>
                    </div>
                    <button onclick="removeItem(this)" style="background: #ff4757; padding: 5px 10px;">‚úï</button>
                </div>
            `;
            container.appendChild(div);
        }

        function removeItem(button) {
            button.closest('.scoring-item').remove();
        }

        function setupScoring() {
            gameData.scoringType = document.querySelector('input[name="scoringType"]:checked').value;
            
            document.getElementById('gameDisplayFinal').textContent = gameData.gameName;
            
            const container = document.getElementById('scoringTableContainer');
            
            if (gameData.scoringType === 'rounds') {
                gameData.numRounds = parseInt(document.getElementById('numRounds').value);
                
                let table = '<table class="score-table"><thead><tr><th>Jugador</th>';
                for (let i = 1; i <= gameData.numRounds; i++) {
                    table += `<th>Ronda ${i}</th>`;
                }
                table += '<th>Total</th></tr></thead><tbody>';
                
                gameData.players.forEach((player, playerIndex) => {
                    table += `<tr><td><strong>${player}</strong></td>`;
                    for (let round = 0; round < gameData.numRounds; round++) {
                        table += `<td><input type="number" value="0" id="score-${playerIndex}-${round}" onchange="updateTotal(${playerIndex})"></td>`;
                    }
                    table += `<td><strong id="total-${playerIndex}">0</strong></td></tr>`;
                });
                
                table += '</tbody></table>';
                container.innerHTML = table;
                
            } else {
                const items = Array.from(document.querySelectorAll('.item-name'))
                    .map((input, index) => ({
                        name: input.value.trim(),
                        negative: document.querySelectorAll('.item-negative')[index].checked
                    }))
                    .filter(item => item.name !== '');
                
                if (items.length === 0) {
                    alert('Por favor, a√±ade al menos un √≠tem puntuble');
                    return;
                }
                
                gameData.items = items;
                
                let table = '<table class="score-table"><thead><tr><th>Jugador</th>';
                items.forEach(item => {
                    table += `<th>${item.name}${item.negative ? ' (-)' : ''}</th>`;
                });
                table += '<th>Total</th></tr></thead><tbody>';
                
                gameData.players.forEach((player, playerIndex) => {
                    table += `<tr><td><strong>${player}</strong></td>`;
                    items.forEach((item, itemIndex) => {
                        table += `<td><input type="number" value="0" id="score-${playerIndex}-${itemIndex}" onchange="updateTotalItems(${playerIndex})"></td>`;
                    });
                    table += `<td><strong id="total-${playerIndex}">0</strong></td></tr>`;
                });
                
                table += '</tbody></table>';
                container.innerHTML = table;
            }
            
            showScreen('scoringScreen');
        }

        function updateTotal(playerIndex) {
            let total = 0;
            for (let round = 0; round < gameData.numRounds; round++) {
                const value = parseInt(document.getElementById(`score-${playerIndex}-${round}`).value) || 0;
                total += value;
            }
            document.getElementById(`total-${playerIndex}`).textContent = total;
        }

        function updateTotalItems(playerIndex) {
            let total = 0;
            gameData.items.forEach((item, itemIndex) => {
                const value = parseInt(document.getElementById(`score-${playerIndex}-${itemIndex}`).value) || 0;
                total += item.negative ? -value : value;
            });
            document.getElementById(`total-${playerIndex}`).textContent = total;
        }

        function calculateResults() {
            const results = gameData.players.map((player, index) => ({
                player: player,
                score: parseInt(document.getElementById(`total-${index}`).textContent)
            }));
            
            results.sort((a, b) => b.score - a.score);
            
            document.getElementById('gameDisplayResults').textContent = gameData.gameName;
            
            const container = document.getElementById('resultsContainer');
            container.innerHTML = '';
            
            results.forEach((result, index) => {
                const div = document.createElement('div');
                div.className = index === 0 ? 'result-item winner' : 'result-item';
                div.innerHTML = `
                    <span>${index + 1}. ${result.player}</span>
                    <span>${result.score} puntos ${index === 0 ? '<span class="winner-badge">üèÜ GANADOR</span>' : ''}</span>
                `;
                container.appendChild(div);
            });
            
            showScreen('resultsScreen');
        }

        function resetGame() {
            // Detener temporizador si est√° activo
            if (timerData.interval) {
                clearInterval(timerData.interval);
            }
            
            // Limpiar todos los datos
            gameData = {
                gameName: '',
                players: [],
                playerColors: [],
                timePerPlayer: 60,
                scoringType: 'rounds',
                numRounds: 5,
                items: [],
                orderedPlayers: [],
                orderedColors: []
            };
            
            timerData = {
                currentPlayerIndex: 0,
                timeRemaining: 60,
                interval: null,
                isPaused: false
            };
            
            // Reiniciar formularios
            document.getElementById('gameName').value = '';
            document.getElementById('playersContainer').innerHTML = `
                <div class="player-input-row">
                    <input type="text" placeholder="Nombre del jugador 1" class="player-name">
                    <input type="color" value="#e74c3c" class="player-color" title="Color del jugador">
                    <button onclick="removePlayerInput(this)" class="remove-player-btn" style="display: none;">‚úï</button>
                </div>
                <div class="player-input-row">
                    <input type="text" placeholder="Nombre del jugador 2" class="player-name">
                    <input type="color" value="#3498db" class="player-color" title="Color del jugador">
                    <button onclick="removePlayerInput(this)" class="remove-player-btn" style="display: none;">‚úï</button>
                </div>
            `;
            document.getElementById('itemsContainer').innerHTML = `
                <div class="scoring-item">
                    <div class="scoring-item-header">
                        <input type="text" placeholder="Nombre del √≠tem (ej: Ciudades)" class="item-name" style="width: 60%;">
                        <div class="checkbox-label">
                            <input type="checkbox" class="item-negative">
                            <label>Resta</label>
                        </div>
                        <button onclick="removeItem(this)" style="background: #ff4757; padding: 5px 10px;">‚úï</button>
                    </div>
                </div>
            `;
            
            showScreen('setupScreen');
        }
    </script>
</body>
</html>
